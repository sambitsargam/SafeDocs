// Environment Variables
PORT=4000
NODE_ENV=development

// Database
DATABASE_URL="postgresql://user:password@localhost:5432/safedocs"

// JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

// Filecoin Configuration
FILECOIN_NETWORK=testnet
FILECOIN_PRIVATE_KEY=your-filecoin-private-key
FILECOIN_ENDPOINT=https://api.calibration.node.glif.io
IPFS_ENDPOINT=https://ipfs.infura.io:5001

// Synapse SDK Configuration
SYNAPSE_API_KEY=your-synapse-api-key
SYNAPSE_NETWORK=testnet

// Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB

// Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

// Security
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGIN=http://localhost:3000

// Logging
LOG_LEVEL=debug
LOG_FILE=./logs/safedocs.log

// File CDN
FILCDN_ENDPOINT=https://cdn.filecoin.io
FILCDN_API_KEY=your-filcdn-api-key

// Compliance
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
SIGNATURE_ALGORITHM=ECDSA
HASH_ALGORITHM=SHA256